#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

echo "Running type check..."
npm run type-check

if [ $? -ne 0 ]; then
  echo "Type check failed. Please fix errors before pushing."
  exit 1
fi

echo "Running build check..."
npm run build

if [ $? -ne 0 ]; then
  echo "Build failed. Please fix errors before pushing."
  exit 1
fi

echo "All checks passed!"

